#–∑–∞–¥–∞–Ω–∏–µ1
print("–í–≤–µ–¥–∏—Ç–µ –≤–∞—à –≤–æ–∑—Ä–∞—Å—Ç:")
age = int(input())
print("–í–≤–µ–¥–∏—Ç–µ –≤–æ–∑—Ä–∞—Å—Ç –≤–∞—à–µ–≥–æ –¥—Ä—É–≥–∞:")
ageage = int(input())
print("–°—É–º–º–∞ –≤–∞—à–∏—Ö –≤–æ–∑—Ä–∞—Å—Ç–æ–≤:", age+ageage)
#–∑–∞–¥–∞–Ω–∏–µ2
print("–í–≤–µ–¥–∏—Ç–µ –≤–∞—à–µ –∏–º—è:")
name = str(input())
print("–í–≤–µ–¥–∏—Ç–µ –≤–∞—à—É —Ñ–∞–º–∏–ª–∏—é:")
secondname = str(input())
print(f'–ü—Ä–∏–≤–µ—Ç, {name} {secondname}')
#–ó–∞–¥–∞–Ω–∏–µ3
menu = ["–°—É–ø","–ü–∞—Å—Ç–∞","–î–µ—Å–µ—Ä—Ç"]
print(f'–ú–µ–Ω—é:,\n1.',menu[0],"\n2.",menu[1],"\n3.",menu[2])
#–ó–∞–¥–∞–Ω–∏–µ4
print("*****","*****","*****",sep="\n")
#–ó–∞–¥–∞–Ω–∏–µ5
